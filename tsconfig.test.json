{
	"compilerOptions": {
		"target": "ES2021",
		"module": "ESNext",
		"lib": [
			"ES2023",
			"webworker"
		],
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"outDir": "dist/mjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"paths": {
			"*": [
				"types/*"
			]
		},
		"types": [
			"jest",
			"@types/jest",
		]
	},
	"include": [
		"**/*.spec.ts",
	],
	"files": [
		"index.ts"
	],
	"typeAcquisition": {
		"enable": true
	}
}
